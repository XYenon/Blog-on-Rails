<% users.each do |user| %>
  <div class="col s3">
    <div class="row">
      <div class="col s12">
        <div class="card">
          <div class="card-image">
            <img src="<%= user.avatar_src %>" alt="avatar">
          </div>
          <div class="card-content">
            <span class="card-title"><%= user.username %></span>
            <p><%= user.profile %></p>
          </div>
          <div class="card-action"><%= link_to 'Articles', user_articles_path(user_id: user.id) %></div>
          <div class="card-action"><%= link_to 'Comments', user_comments_path(user_id: user.id) %></div>
        </div>
      </div>
    </div>
  </div>
<% end %>