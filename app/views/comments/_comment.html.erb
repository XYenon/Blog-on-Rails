<li class="collection-item avatar">
  <div class="row">
    <div class="col s10">
      <img src="<%= comment.user.avatar_src %>" alt="avatar" class="circle">
      <span class="title" style="font-size: 20px"><%= comment.user.username %></span>
      <br>
      <%= render html: comment.body.html_safe %>
    </div>

    <div class="col s2">
      <% if self?(comment) %>
        <%= link_to 'Edit', edit_comment_path(comment.id), class: 'waves-effect waves-light btn-small', style: 'float: right;' %>
      <% end %>
      <br>
      <% if self_or_admin?(comment) %>
        <%= link_to 'Destroy', [comment.article, comment],
                    method: :delete,
                    data: {confirm: 'Are you sure?'},
                    class: 'red waves-effect waves-light btn-small',
                    style: 'float: right;' %>
      <% end %>
    </div>
  </div>
</li>

