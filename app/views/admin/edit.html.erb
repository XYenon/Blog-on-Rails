<h3>Edit Info</h3>

<div class="row">
  <div class="col s6">
    <%= render 'admin/form', user: @user %>
  </div>
  <div class="col s2"></div>
  <div class="col s3">
    <div class="row">
      <img src="<%= @user.avatar_src %>" id="avatar" alt="avatar" width="100%" height="100%">
    </div>
    <div class="row">
      <%= form_for(@user, url: admin_update_user_path) do |f| %>
        <div class="row">
          <div class="col s2"></div>
          <div class="col s8">
            <div class="switch">
              <label>
                Use Gravatar
                <%= f.check_box :gravatar %>
                <span class="lever"></span>
              </label>
            </div>
          </div>
          <div class="col s2"></div>
        </div>
        <div class="row" id="avatar_uploader">
          <div class="file-field input-field">
            <div class="btn">
              <span>File</span>
              <%= f.file_field :avatar %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text" placeholder="Upload a avatar">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s3"></div>
          <%= f.submit 'Submit', class: 'col s6 waves-effect waves-light btn-large' %>
          <div class="col s3"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
    switch_avatar = function () {
        if ($('#user_gravatar').is(':checked')) {
            $('#avatar_uploader').hide(100);
        } else {
            $('#avatar_uploader').show(100);
        }
    };

    switch_avatar();

    $('#user_gravatar').change(function () {
        switch_avatar()
    });
</script>