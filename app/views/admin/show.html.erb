<h3>My Info</h3>

<div class="row">
  <div class="col s6">
    <div class="row">
      <div class="input-field col s12">
        <input disabled value="<%= @user.username %>" id="user_username" class="validate">
        <label for="user_username" class="active">Username</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input disabled value="<%= @user.email %>" id="user_email" class="validate">
        <label for="user_email" class="active">E-Mail</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input disabled value="<%= @user.profile %>" id="user_profile" class="validate">
        <label for="user_profile" class="active">Profile</label>
      </div>
    </div>
    <div class="row">
      <div class="col s1"></div>
      <%= link_to 'Edit', admin_edit_user_path(@user), class: "waves-effect waves-light btn col s4" %>
      <div class="col s2"></div>
      <%= link_to 'Destroy', admin_destroy_user_path(@user), method: :delete,
                  data: {confirm: 'Are you sure?'},
                  class: "waves-effect waves-light red btn col s4" %>
      <div class="col s1"></div>
    </div>
  </div>
  <div class="col s2"></div>
  <div class="col s3">
    <div class="row">
      <img src="<%= @user.avatar_src %>" id="avatar" alt="avatar" width="100%" height="100%">
    </div>
    <div class="row">
      <div class="col s2"></div>
      <div class="col s8">
        <div class="switch">
          <label>
            Use Gravatar
            <input disabled type="checkbox"
                   <% if @user.gravatar %>checked
                   <% end %>>
            <span class="lever"></span>
          </label>
        </div>
      </div>
      <div class="col s2"></div>
    </div>
  </div>
</div>
